{
  "name": "@js-primer/local-server",
  "version": "0.0.3",
  "description": "Local Server for js-primer.",
  "keywords": [
    "js-primer",
    "local-server",
    "server"
  ],
  "homepage": "https://github.com/js-primer/local-server",
  "bugs": {
    "url": "https://github.com/js-primer/local-server/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/local-server.js",
  "types": "lib/local-server.d.ts",
  "bin": {
    "js-primer-local-server": "./bin/cmd.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/js-primer/local-server.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p .",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.{js,ts}\"",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "watch": "tsc -p . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "connect": "^3.7.0",
    "detect-port": "^1.3.0",
    "log-symbols": "^3.0.0",
    "meow": "^5.0.0",
    "serve-static": "^1.14.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/connect": "^3.4.32",
    "@types/detect-port": "^1.1.0",
    "@types/meow": "^5.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.6.2",
    "@types/serve-static": "^1.13.2",
    "@types/supertest": "^2.0.8",
    "cross-env": "^5.2.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "ts-node-test-register": "^8.0.1",
    "typescript": "^3.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
